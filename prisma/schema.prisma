generator client {
  provider = "prisma-client-js"
}

model Account {
  address   String         @id
  accounts  SmartAccount[]
  favorites Favorites[]
}

model SmartAccount {
  address              String  @id
  name                 String?
  chainId              String
  authorAccount        Account @relation(fields: [authorAccountAddress], references: [address])
  authorAccountAddress String
}

model Favorites {
  favoriteId String  @unique
  account    Account @relation(fields: [accountId], references: [address])
  accountId  String
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}
